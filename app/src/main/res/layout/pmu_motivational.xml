<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B0E9F2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/pmu_backbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#00FDFDFE"
            app:srcCompat="@drawable/pmu_backbutton" />

        <ImageView
            android:id="@+id/pmu_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="-5dp"
            android:layout_weight="1"
            android:scaleX=".9"
            android:scaleY=".9"
            app:srcCompat="@drawable/pmu_title" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="315dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/motivatedshibaimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:scaleX=".9"
            android:scaleY=".9"
            app:srcCompat="@drawable/motivatedshiba" />

        <ImageButton
            android:id="@+id/mot_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#00FDFDFE"
            app:srcCompat="@drawable/motivationbutton" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/shibapower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleX=".9"
            android:scaleY=".9"
            app:srcCompat="@drawable/powershiba" />

        <ImageButton
            android:id="@+id/powerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/powerposebutton" />
    </LinearLayout>

</LinearLayout>