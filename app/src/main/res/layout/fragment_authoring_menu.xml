<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#58768F"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/authorHeader1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="top"
        app:srcCompat="@drawable/writingheader" />

    <ImageButton
        android:id="@+id/pastwriting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:background="#00FFFFFF"
        android:scaleType="matrix"
        android:scaleX=".9"
        android:scaleY=".9"
        android:visibility="visible"
        app:srcCompat="@drawable/pastbutton" />

    <ImageButton
        android:id="@+id/presentwriting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/pastwriting"
        android:layout_centerHorizontal="true"
        android:scaleX=".9"
        android:scaleY=".9"
        android:layout_marginTop="0dp"
        android:background="#00FFFFFF"
        app:srcCompat="@drawable/presentbutton" />

    <ImageButton
        android:id="@+id/futurewriting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/presentwriting"
        android:layout_centerHorizontal="true"
        android:scaleX=".9"
        android:scaleY=".9"
        android:background="#00FFFFFF"
        app:srcCompat="@drawable/futurebutton" />

    <ImageButton
        android:id="@+id/wbackButton1"
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="337dp"
        android:layout_marginBottom="29dp"
        android:background="#00FFFFFF"
        app:srcCompat="@drawable/wbackbutton" />

    <ImageButton
        android:id="@+id/quickWriteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/futurewriting"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:layout_alignParentBottom="true"
        android:background="#00FFFFFF"
        app:srcCompat="@drawable/bottomwritingbutton" />

    <ImageView
        android:id="@+id/authoringheadertitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/authorHeader1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp"
        app:srcCompat="@drawable/writingtitle" />


</RelativeLayout>