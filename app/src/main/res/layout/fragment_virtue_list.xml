<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3E6C0"
    android:orientation="vertical"
    android:id="@+id/root">


    <ImageView
        android:id="@+id/authorHeader2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:foregroundGravity="top"
        app:srcCompat="@drawable/writingheader" />

    <ImageButton
        android:id="@+id/wbackbutton2"
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/authorHeader2"
        android:layout_marginStart="15dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="337dp"
        android:layout_marginBottom="29dp"
        android:background="#00FFFFFF"
        app:srcCompat="@drawable/wbackbutton" />


    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/authorHeader2"
        android:backgroundTint="#F5F0BF" />


</RelativeLayout>